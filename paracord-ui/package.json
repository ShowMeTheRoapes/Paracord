{
  "name": "paracord-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "lodash": "~4.17.14",
    "lodash.template": "~4.5.0",
    "react": "~16.8.6",
    "react-dom": "~16.8.6",
    "react-scripts": "3.0.1",
    "set-value": "~3.0.1",
    "tailwindcss": "~1.0.4"
  },
  "scripts": {
    "tailwind:css": "npx tailwind build src/css/App.css -o src/generated/tailwind.css",
    "start": "yarn tailwind:css && react-scripts start",
    "build": "react-scripts build",
    "test": "cross-env CI=true && react-scripts test --watchAll=false --bail",
    "test-watch": "cross-env CI=true && react-scripts test",
    "lint": "eslint --ignore-path .gitignore .",
    "lint-fix": "eslint --fix --ignore-path .gitignore .",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-react"
    ],
    "parser": "babel-eslint",
    "env": {
      "jest": true
    },
    "rules": {
      "semi": "error",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "indent": [
        "error",
        3
      ],
      "react/jsx-indent": [
        "error",
        3
      ],
      "react/jsx-indent-props": [
        "error",
        3
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "cross-env": "~5.2.0",
    "eslint": "5.16.0",
    "eslint-config-standard": "~12.0.0",
    "eslint-config-standard-react": "~7.0.2",
    "eslint-plugin-import": "~2.17.3",
    "eslint-plugin-node": "~9.1.0",
    "eslint-plugin-promise": "~4.1.1",
    "eslint-plugin-react": "~7.13.0",
    "eslint-plugin-standard": "~4.0.0"
  }
}
